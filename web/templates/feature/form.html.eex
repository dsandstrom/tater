<%= form_for @changeset, @action, fn f -> %>
  <%= form_alert(@changeset) %>

  <%= input f, :name %>

  <%= if @changeset.data.mapping != nil do %>
    <%= input f, :mapping %>
  <% end %>

  <%= input f, :annotation, using: :textarea %>

  <div class="form-group">
    <p>*All fields required</p>
    <%= submit "Submit", class: "button button-success" %>
  </div>
<% end %>
