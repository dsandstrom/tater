<%= form_for @conn, feature_path(@conn, :index),
             [as: :search, method: :get, class: "search-form"],
             fn f -> %>
  <div class="form-group">
    <%= text_input f, :q, placeholder: "Search by name" %>

    <%= submit class: "button" do %>
      <i class="icon-search"></i>
    <% end %>
  </div>

  <p><%= link "reset", to: feature_path(@conn, :index) %></p>
<% end %>
